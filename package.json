{
  "name": "ton-tvm-bus",
  "version": "0.1.9",
  "repository": {
    "type": "git",
    "url": " https://github.com/ton-defi-org/ton-tvm-bus.git"
  },
  "description": "Testing framework for TON that leverages ton-contract-executor",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "rm -rf lib && tsc",
    "test": "NODE_OPTIONS=\"--no-warnings --loader ts-node/esm\" npx mocha --exit 'test/**/*.ts'",
    "prepare": "npm run build",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm test ",
    "postversion": "git push && git push --tags"
    
  },
  "keywords": [
    "ton",
    "ton-contract-executor"
  ],
  "author": "doronaviguy",
  "license": "ISC",
  "dependencies": {
    "@types/chai": "^4.3.3",
    "chai": "^4.3.6",
    "ton": "^9.9.0",
    "ton-contract-executor": "^0.5.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/mocha": "^9.1.1",
    "prettier": "^2.7.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  }
}
